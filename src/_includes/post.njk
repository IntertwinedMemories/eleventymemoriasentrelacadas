---
layout: base.njk
---

<div class="outer">
  <div class="inner-medium">
    <article class="post post-full">
      <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
      </header>
      <div class="post-image">
        {% if image %}
          <img src="{{ image }}" alt=""/>
        {% endif %}
        <p class="image-caption">{{ imagecaption }}</p>
      </div>
      <div class="post-content">
        {{ content|safe }}
      </div>
      <footer class="post-meta">
        {% if date %}
          <time class="published" datetime="{{ date | toISOString }}">{{ date | formatDate }}</time>, by Anna Maria Del Fiorentino</footer>
      {% endif %}
    </article>
  </div>
</div>